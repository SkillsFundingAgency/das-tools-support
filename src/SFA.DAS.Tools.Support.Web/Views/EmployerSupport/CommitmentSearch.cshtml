@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SFA.DAS.Tools.Support.Web.Models.EmployerSupport
@model SFA.DAS.Tools.Support.Web.Models.EmployerSupport.CommitmentSearchModel
@{
    ViewData["Title"] = "Commitments Search";
}


<form id="" method="get">
    <div class="govuk-form-group">
        <h2 class="govuk-heading-l">Search</h2>
        <p class="govuk-body">
            You can either search for a cohort reference number or for an apprenticeship ULN.
        </p>
        <fieldset class="govuk-fieldset">
            <div class="govuk-form-group">
                <input asp-for="SearchTerm" class="govuk-input govuk-input--width-30" />
            </div>
            <div class="govuk-radios govuk-radios--inline">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="SearchType-ByUln" name="SearchType" type="radio" value="@ApprenticeshipSearchType.SearchByUln">
                    <label class="govuk-label govuk-radios__label" for="SearchType-ByUln">
                        ULN
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="SearchType-ByCohort" name="SearchType" type="radio" value="@ApprenticeshipSearchType.SearchByCohort">
                    <label class="govuk-label govuk-radios__label" for="SearchType-ByCohort">
                        Cohort reference
                    </label>
                </div>
            </div>
            <div class="govuk-form-group">
                <button class="govuk-button" data-module="govuk-button" id="submitSearchFormButton">
                    Search
                </button>
            </div>
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset class="inline">


        </fieldset>
    </div>
</form>