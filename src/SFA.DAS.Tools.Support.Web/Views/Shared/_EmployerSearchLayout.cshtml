@using SFA.DAS.Tools.Support.Web.Models.EmployerSupport

@model EmployerBaseSearchViewModel
@{
    Layout = "_Layout";
}

<div class="secondary-header">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-quarter">
            <nav class="sub-nav">
                <ul class="govuk-task-list" role="menu">
                    <li class="govuk-task-list__item govuk-task-list__item--with-link @(Model.SearchMode == SearchMode.UserSearch ? "selected" : "")">
                        <a href="@Url.Action("EmployerUserSearch")" class="@(Model.SearchMode == SearchMode.UserSearch ? "govuk-link--inverse" : "govuk-link")">Employer User Search</a>
                    </li>
                    <li class="govuk-task-list__item govuk-task-list__item--with-link @(Model.SearchMode == SearchMode.EmployerSearch ? "selected" : "")">
                        <a href="@Url.Action("EmployerAccountSearch")" class="@(Model.SearchMode == SearchMode.EmployerSearch ? "govuk-link--inverse" : "govuk-link")">Employer Account Search</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="govuk-grid-column-three-quarters">
            @RenderBody()
        </div>
    </div>
</div>