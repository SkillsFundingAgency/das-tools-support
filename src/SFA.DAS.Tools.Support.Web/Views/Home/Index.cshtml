@{
    ViewData["Title"] = "Home";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Apprenticeship service bulk stop utility</h1>
        <p class="govuk-body">Apprenticeship service support staff can use this service to:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>pause apprenticeships</li>
            <li>resume apprenticeships</li>
            <li>stop apprenticeships</li>
            <li>reinstate user accounts</li>
        </ul>
        <p class="govuk-body">You’ll need a DfE Sign-in account to use this service. If you don’t have a DfE Sign-in account, you can create one at the next step.</p>
        <a href="/support" class="govuk-button govuk-button--start" role="button">
            Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
        </a>
    </div>
</div>