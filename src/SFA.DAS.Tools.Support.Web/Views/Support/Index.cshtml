@{
    ViewData["Title"] = "Support Portal";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            DAS Tools Support
        </h1>
        <dl class="govuk-summary-list">           
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Stop an Apprenticeship
                </dt>
                <dd class="govuk-summary-list__value">
                    This tool sends a stop command to Approvals to update the commitments database and subsequently payments.
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a asp-controller="Approvals" asp-action="StopApprenticeship" class="govuk-link">
                        Open<span class="govuk-visually-hidden"> Stop an Apprenticeship</span>
                    </a>
                </dd>
            </div>
        </dl>
    </div>
</div>